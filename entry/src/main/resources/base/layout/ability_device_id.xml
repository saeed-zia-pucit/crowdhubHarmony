<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:padding="0vp">


    <Text
        ohos:height="30vp"
        ohos:padding="10vp"
        ohos:text_alignment="center"
        ohos:width="match_parent"
        ohos:text="Enter this Serial number in dashboard:"/>

    <Text
        ohos:id="$+id:deviceIdTv"
        ohos:height="70vp"
        ohos:width="match_parent"
        ohos:text_size="15vp"
        ohos:multiple_lines="true"
        ohos:padding="10vp"
        ohos:text_alignment="center"
        ohos:text_color="#FFDD193B"
        ohos:text_weight="1"/>


</DirectionalLayout>
