<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:padding="0vp">

    <Button
        ohos:id="$+id:btnSignUp"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:btn_bg1"
        ohos:text="$string:sign_up"
        ohos:text_color="$color:black"
        ohos:top_margin="10vp"
        />

    <Button
        ohos:id="$+id:btnLogin"
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:btn_bg1"
        ohos:text="$string:login"
        ohos:text_color="#000"
        ohos:top_margin="8vp"/>


</DirectionalLayout>
